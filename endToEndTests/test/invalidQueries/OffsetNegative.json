{
  "testCaseName": "Details action with negative offset",
  "query": {
    "action": {
      "type": "Details",
      "orderByFields": ["primary_key"],
      "offset": -1231
    },
    "filterExpression": {
      "type": "And",
      "children": [
        {
          "type": "StringEquals",
          "column": "country",
          "value": "Switzerland"
        },
        {
          "type": "Lineage",
          "column": "pango_lineage",
          "value": "B.1.1.7",
          "includeSublineages": true
        }
      ]
    }
  },
  "expectedError": {
    "error": "Bad request",
    "message": "If the action contains an offset, it must be a non-negative number"
  }
}
